<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Probando2.MainPage"
             NavigationPage.HasNavigationBar="False">
    <StackLayout>
        <Entry Placeholder="Write your name:" 
               FontSize="Large"
               FontAttributes="Bold"
               Margin="10"
               x:Name="EntryName"
               >
        </Entry>
        <Button Text="Submit name"
                Margin="0,0,0,200"
                WidthRequest="200"
                FontAttributes="Bold"
                FontSize="Large" x:Name="BtnSubmitName" Clicked="BtnSubmitName_Clicked"
                >

        </Button>
        <Label Text="Esto es una prueba"></Label>
    </StackLayout>
</ContentPage>
